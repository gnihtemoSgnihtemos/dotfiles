[user]
    name = Martin Polden
    email = martin.polden@gmail.com
[core]
    editor = vim
    excludesfile = ~/.gitignore
    autocrlf = input
[merge]
    tool = vimdiff
[color]
    ui = auto
[alias]
    lg = "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
    addheroku = "!git remote add heroku git@heroku.com:$(echo $(basename $(pwd)) | tr '.' '-').git"
    wdiff = diff --word-diff=color
    s = status --short --branch
[push]
    default = upstream
[web]
    browser = google-chrome
[branch]
    autosetuprebase = always
[rebase]
    stat = true
