[user]
	name = Martin Polden
	email = mpolden@mpolden.no
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	# This pager removes leading +/- from unified diff output
	# Matching:
	# 1. Characters leading up to +/- (in case of colors)
	# 2. Actual +/- prefix
	# 3. A single character that's not +/- to avoid matching diff headline (---/+++)
	# Substitution:
	# 1. Put back control characters
	# 2. Leave a space to preserve indentation
	# 3. Put back repeated +/-
	pager = sed -E \"s/^([^-+]*)[-+]([^-+])/\\1 \\2/\" | less
[color]
	ui = auto
[alias]
	lg = "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
	s = status --short --branch
	co = checkout
	b = branch
	prune-branches = "!git branch --merged | grep -Ev '^\\*|  master$' | xargs git branch --delete"
	sync = "!git checkout master && git pull && git prune-branches"
	discard = "!sh -c \"git reset -- $1 && git checkout -- $1\""
[push]
	default = simple
[fetch]
	prune = true
[branch]
	autosetuprebase = always
[rebase]
	stat = true
	autostash = true
[grep]
	lineNumber = true
[log]
	follow = true
[diff]
	indentHeuristic = true
[include]
	path = .gitconfig.local
