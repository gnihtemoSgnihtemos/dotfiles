[user]
	name = Martin Polden
	email = mpolden@mpolden.no
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	# This pager removes leading +/- from colored unified diff
	# Matching:
	# 1. Color escape characters
	# 2. All leading + and - characters
	# Substitution:
	# 1. Put back escape characters
	# 2. Replace + and - with N spaces with reversed color, to preserve indentation
	# and highlighting of empty lines
	pager = perl -pe \"s|^(\\e\\[\\d{2,}m)([-+]+)|\\\"\\$1\\e[7m\\\" . (' ' x length(\\$2)) . \\\"\\e[27m\\\"|e\" | less
[color]
	ui = auto
[alias]
	lg = "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
	s = status --short --branch
	co = checkout
	b = branch
	prune-branches = "!git branch --merged | grep -Ev '^\\*|  master$' | xargs git branch --delete"
	sync = "!git checkout master && git pull && git prune-branches"
	discard = "!sh -c \"git reset -- $1 && git checkout -- $1\""
[push]
	default = simple
[fetch]
	prune = true
[branch]
	autosetuprebase = always
[rebase]
	stat = true
	autostash = true
[grep]
	lineNumber = true
[log]
	follow = true
[diff]
	indentHeuristic = true
[include]
	path = .gitconfig.local
